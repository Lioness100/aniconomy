{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist",
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": ["../node_modules/@types", "@types"],
    "paths": {
      "#root/*": ["*"],
      "#lib/*": ["lib/*"],
      "#env": ["lib/env"],
      "#ext": ["lib/extensions"],
      "#ext/*": ["lib/extensions/*"],
      "#structures/*": ["lib/structures/*"],
      "#types/*": ["lib/types/*"],
      "#entities/*": ["lib/database/entities/*"]
    },
  },
  "include": ["."]
}
